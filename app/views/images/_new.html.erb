<%= form_for :image, :url => album_images_path(@album), method: :post, mutliplart: true do |f|%>
  <div class="modal fade" id="new_album">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">
            Enter a title for the new picture<album></album>
          </div>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', value: 'untitled', autofocus: true, maxlength: 30 %>
            <br />
            <%= f.file_field :picture, accept: 'image/png,image/jpeg/image/gif', class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="row">
            <a class="btn col-xs-3" data-dismiss="modal">cancel</a>
            <%= f.submit('Upload',class: 'btn col-xs-8 text-center') %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
